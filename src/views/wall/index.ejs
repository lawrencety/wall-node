<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>
    <main class="container">
      <div class="row">
        <div class="col-md-6">
          <h2>Walls</h2>
          <ul class="list-group">
            <% walls.forEach((wall) => { %>
              <li class="list-group-item">
                <a href="/wall/<%= wall.id %>"> <%= wall.name %> </a>
              </li>
            <% }) %>
          </ul>
        </div>
      </div>
      <% if (currentUser) { %>
        <div class="row justify-content-center">
          <div class="col-xs-2">
            <a href="/wall/new" class="btn btn-success">New Wall</a>
          </div>
        </div>
      <% } %>
    </main>
    <% include ../static/partials/baseScripts.ejs %>
  </body>
